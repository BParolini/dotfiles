Host github.com
    User git
    Hostname github.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/github_ed25519
    IdentitiesOnly yes

Host gitlab.com
    User git
    Hostname gitlab.com
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/gitlab_ed25519

Host bitbucket.org
    User git
    Hostname bitbucket.org
    PreferredAuthentications publickey
    IdentityFile ~/.ssh/bitbucket_ed25519

Host github.com-emu
    HostName github.com
    User git
    IdentityFile ~/.ssh/id_ed25519_melisource
    IdentitiesOnly yes
    AddKeysToAgent yes
    UseKeychain yes
